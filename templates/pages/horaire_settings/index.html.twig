{% extends 'base.html.twig' %}

{% block title %}Horaires Settings{% endblock %}

{% block body %}

<div class="container mt-4">
  <h2>Horaires des Employes</h2>
    <a href="{{path('horaire_new')}}" class="btn btn-secondary">Nouvel Horaire</a>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{message}}</div>
    {% endfor %}
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Num√©ro</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Entree</th>
        <th scope="col">ExitBreak</th>
        <th scope="col">ReturnBreak</th>
        <th scope="col">ExitWork</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
        {% for horaire in horaires %}
            <tr class="table-primary">
              <th scope="row">{{horaire.id}}</th>
              <th scope="row">{{horaire.name}}</th>
              <th scope="row">{{horaire.description}}</th>
              <th scope="row">{{horaire.entree | date("H:i:s")}}</th>
              <th scope="row">{{horaire.exitBreak | date("H:i:s")}}</th>
              <th scope="row">{{horaire.returnBreak | date("H:i:s")}}</th>
              <th scope="row">{{horaire.exitWork | date("H:i:s")}}</th>
              <th scope="row"><a href="{{path('horaire_edit', {id: horaire.id})}}">Update</a></th>
              <th scope="row"><a href="{{path('horaire_delete', {id: horaire.id})}}">Delete</a></th>
            </tr>
        {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
